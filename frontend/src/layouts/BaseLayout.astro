---
import Navbar from "~src/components/Navbar.astro";
import RootLayout from "~src/layouts/RootLayout.astro";
---

<RootLayout>
    <Navbar />

    <main>
        <slot />
    </main>
</RootLayout>

<style is:global>
    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        overflow: hidden;
        clip: rect(0 0 0 0);
        clip-path: inset(50%);
        white-space: nowrap;
    }
</style>
